{% extends "base.html.twig" %}

{% block body %}
	<div class="container col-md-12 text-center mt-3">
		<div class="row">
			<div class="col-md-12">

				<div class="card-body">
					<table class="table table-bordered table-striped">
						<thead>
							<tr>
								<th>ID</th>
								<th>Customer Name</th>
								<th>Product Name</th>
								<th>Order Quantity</th>
								<th>Total Price</th>
								<th>Order Date</th>
								<th>Action</th>
							</tr>
							{% for order in order %}
								<tr>
									<td class="text text-success">{{order.id}}</td>
									<td class="text text-success">{{order.user.username}}</td>
									<td class="text text-success">{{order.product.name}}</td>
									<td class="text text-success">{{order.quantity}}</td>
									<td class="text text-success">{{order.totalprice}}</td>
									<td class="text text-success">{{order.datetime | date('d/m/Y')}}</td>
									<td>
										<a href="{{path('order_delete', {'id': order.id })}}" onclick="return confirm('Do you want to delete this category ?')" class="btn btn-danger">Delete</a>
									</td>
								</tr>
							{% endfor %}
						</thead>
					</table>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
